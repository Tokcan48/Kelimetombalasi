rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Feedbacks - Herkes okuyabilir ve yazabilir (form gönderimi için)
    match /feedbacks/{feedbackId} {
      allow read: if true; // Herkes okuyabilir (admin paneli için)
      allow create: if true; // Herkes yeni geri bildirim gönderebilir
      allow update: if true; // Status güncellemesi için (admin)
      allow delete: if true; // Admin silme işlemi için
    }
    
    // System Logs - Herkes yazabilir, herkes okuyabilir (admin paneli için)
    match /systemLogs/{logId} {
      allow read: if true; // Admin paneli için okuma
      allow write: if true; // Sistem logları yazılabilir
    }
    
    // Analytics - Herkes okuyabilir ve yazabilir (istatistikler için)
    match /analytics/{document=**} {
      allow read: if true; // İstatistikleri herkes görebilir
      allow write: if true; // PDF oluşturma istatistikleri yazılabilir
    }
    
    // PDF History - Herkes okuyabilir ve yazabilir (istatistikler için)
    match /pdfHistory/{historyId} {
      allow read: if true; // PDF geçmişi okunabilir
      allow write: if true; // PDF oluşturma kayıtları yazılabilir
    }
    
    // Sessions - Herkes okuyabilir ve yazabilir (oturum takibi için)
    match /sessions/{sessionId} {
      allow read: if true; // Oturum bilgileri okunabilir
      allow write: if true; // Oturum güncellemeleri yazılabilir
    }
    
    // Categories - Herkes okuyabilir, yazma sadece admin için (şimdilik herkese açık)
    match /categories/{categoryId} {
      allow read: if true; // Kategoriler herkes tarafından okunabilir
      allow write: if true; // Admin işlemleri için (şimdilik açık)
    }
    
    // Pending Kits - Herkes okuyabilir ve yazabilir (onay bekleyen kitler)
    match /pendingKits/{kitId} {
      allow read: if true; // Bekleyen kitler okunabilir
      allow write: if true; // Kit gönderimi ve onay işlemleri için
    }
    
    // Ready Kits - Herkes okuyabilir, yazma sadece admin için (şimdilik herkese açık)
    match /readyKits/{kitId} {
      allow read: if true; // Onaylanmış kitler herkes tarafından okunabilir
      allow write: if true; // Admin işlemleri için (şimdilik açık)
    }
  }
}




